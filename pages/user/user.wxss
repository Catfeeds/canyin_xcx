/* pages/user/user.wxss */

.me {
  height: 100%;
}

.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  background: #f8a519;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
}

.sc {
  background: #fff;
  width: 100%;
  font-size: 12px;
  line-height: 16px;
  color: #666;
  padding: 4% 0;
}

.sc image {
  width: 24px;
  height: 24px;
  display: inline-block;
}

.bte {
  border-top: 1px solid #eee;
}

.qbdd {
  background: #fff;
  width: 92%;
  font-size: 12px;
  color: #666;
  padding: 4%;
  border-bottom: 1px solid #ccc;
}

.c9 {
  float: right;
}

/*在线客服*/

.lll {
  width: 71rpx;
  height: 69rpx;
  position: fixed;
  right: 0px;
  bottom: 88px;
  float: right;
}

.lll image {
  width: 100%;
  height: 100%;
}

contact-button {
  position: relative;
  top: -35px;
  left: 9px;
  opacity: 0;
}

.bottom {
  margin-bottom: 10px;
}
